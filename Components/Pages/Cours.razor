@page "/cours"

<MudContainer>
    <MudText Typo="Typo.h4" Align="Align.Center" Style="margin-top: 20px;">
        Cours
    </MudText>

    <!-- Section Français -->
    <MudPaper Elevation="1" Style="margin-top: 20px; padding: 20px;">
        <MudText Typo="Typo.h5" Style="margin-bottom: 10px;">
            Français
        </MudText>
        <MudGrid>
            @foreach (var video in FrenchVideos)
            {
                <MudItem xs="12" sm="6" md="4">
                    <MudCard>
                        <iframe width="100%" height="200" src="@video.Url" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        <MudCardContent>
                            <MudText Typo="Typo.body1" Align="Align.Center">@video.Title</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
