                        <MudCardContent>
                            <MudText Typo="Typo.body1" Align="Align.Center">@video.Title</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
    </MudPaper>

    <!-- Section Relaxation -->
